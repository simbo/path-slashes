{
  "name": "path-slashes",
  "version": "1.1.1",
  "description": "Adding or removing of trailing and/or leading slashes in strings, test for their existence or join strings with slashes without duplicating them.",
  "author": "Simon Lepel <simbo@simbo.de> (https://simbo.de)",
  "license": "MIT",
  "keywords": [
    "path",
    "slash",
    "slashes",
    "join",
    "leading",
    "trailing"
  ],
  "homepage": "https://github.com/simbo/path-slashes#readme",
  "repository": "github:simbo/path-slashes",
  "bugs": "https://github.com/simbo/path-slashes/issues",
  "engines": {
    "node": ">=16"
  },
  "source": "src/path-slashes.ts",
  "main": "dist/path-slashes.js",
  "umd:main": "dist/path-slashes.umd.js",
  "module": "dist/path-slashes.m.js",
  "esmodule": "dist/path-slashes.modern.js",
  "types": "dist/path-slashes.d.ts",
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "microbundle",
    "build:watch": "microbundle watch",
    "clean": "rm -rf ./dist",
    "clean:coverage": "rm -rf ./coverage",
    "coverage:open": "open ./coverage/lcov-report/index.html",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:fix": "npm run lint:eslint:fix && npm run lint:prettier:fix",
    "lint:eslint": "eslint -c .eslintrc --ext .ts,.js .",
    "lint:eslint:fix": "eslint -c .eslintrc --ext .ts,.js --fix .",
    "lint:prettier": "prettier --check \"**/*.{ts,js,md,json,yml}\"",
    "lint:prettier:fix": "prettier --write \"**/*.{ts,js,md,json,yml}\"",
    "prebuild": "npm run clean",
    "prebuild:watch": "npm run clean",
    "preflight": "npm run lint && npm run test && npm run build",
    "pretest": "npm run clean:coverage",
    "test": "jest",
    "test:watch": "npm run test --watch",
    "upgrade": "npx npm-check-updates -u -t minor && npx npm-check-updates --interactive --reject typescript,@types/node && npm i"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.20",
    "@types/node": "^16.18.25",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-editorconfig": "^3.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^31.0.5",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-unicorn": "^26.0.1",
    "jest": "^26.6.3",
    "microbundle": "^0.13.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
